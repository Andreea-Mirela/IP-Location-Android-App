<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/genghis</item>
    </style>

    <style name="QuizzTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#7A8089</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/genghis</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">13dp</item>
    </style>

</resources>